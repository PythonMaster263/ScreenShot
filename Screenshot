from PIL import ImageGrab
import time


print("Taking ScreenShot.....")
print("3")
time.sleep(1)
print("2")
time.sleep(1)
print("1")
time.sleep(0)
def takeScreenshot():
    image = ImageGrab.grab()
    image.show()
if __name__ == '__main__':

    takeScreenshot()
print("ScreenShot Taken!!")
time.sleep(3)
